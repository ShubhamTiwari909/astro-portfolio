          <div class="flex justify-center gap-x-4">
            {
              socialLinks.map((link) => (
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={link.name}
                  class={`size-15 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center ${link.hoverClass} transition-colors duration-300 group`}
                >
                  <Fragment set:html={link.icon} />
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { animate, inView, stagger } from "motion";
  const animation =  (element: Element) => {
      animate(
        element,
        { opacity: [0, 1] },
        { duration: 0.5, ease: "easeInOut", delay: window.innerWidth > 768 ? 0.5 : 0, delayChildren: stagger(0.5) },
      );
    }
  inView(
    ".contact-info",
    animation,
    { margin: "0px 40px 0px 0px" },
  );
  inView(
    ".contact-social-links",
    animation,
    { margin: "0px 40px 0px 0px" },
  );
</script>
