        <!-- Social Links -->
        <div
          class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-lg flex-1 contact-social-links"
        >
          <h3
            class="text-2xl text-center font-semibold text-gray-900 dark:text-white mb-6"
          >
            Follow Me
